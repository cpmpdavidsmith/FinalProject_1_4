@model Schedule

<h2>Create a New Schedule</h2>

@using (Html.BeginForm("InsertScheduleToDatabase", "Schedule", "Post"))
{
    <input asp-for="UserID" type="hidden" value="" />

    //General INFO
    <label asp-for="Monday" class="control-label">Monday</label>
    <input type="text" name="Monday" class="form-control" value="" />

    <label asp-for="Tuesday" class="control-label">Tuesday</label>
    <input type="text" name="Tuesday" class="form-control" value="" />

    <label asp-for="Wednesday" class="control-label">Wednesdsay</label>
    <input type="number" step="0.01" name="Wednesday" class="form-control" />

    <label asp-for="Thursday" class="control-label">Thursday</label>
    <input type="number" step="0.01" name="UserScheduledHours" class="form-control" />

    <label asp-for="Friday" class="control-label">Friday</label>
    <input type="number" step="0.01" name="Friday" class="form-control" />

    <label asp-for="Saturday" class="control-label">Saturday</label>
    <input type="number" step="0.01" name="Saturday" class="form-control" />

    <label asp-for="Sunday" class="control-label">Sunday</label>
    <input type="number" step="0.01" name="Sunday" class="form-control" />

    //Category INFO
    <div class="form-group">
        <label for="">Select a Category</label>
        <select class="form-control" name="CategoryID" value="">
            @foreach (var cat in Model.Categories)
            {
                <option value="@cat.CategoryID">@cat.CategoryID @cat.FirstName</option>
            }
        </select>
    </div>

    //Submit button
    <input type="submit" value="Create Schedule" class="btn btn-primary" />
}



