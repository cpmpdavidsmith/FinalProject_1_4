 @model User

<h3>@Model.FirstName Information</h3>

<table class="table">
    <tr>
        <th>ID</th>
        <th>FirstName</th>
        <th>LastName</th>
        <th>CategoryID</th>
        <th>UserTotalAllowedHours</th>
        <th>UserScheduledHours</th>
        <th>UserCompletedHours</th>
        <th>UserAvailableScheduledHours</th>
        <th>UserAvailableFreeHours</th>
        <th>UserPhoneNumber</th>
    </tr>
    <tr>
        <td>@Model.UserID</td>
        <td>@Model.FirstName</td>
        <td>@Model.LastName</td>
        <td>@Model.CategoryID</td>
        <td>@Model.UserTotalAllowedHours</td>
        <td>@Model.UserScheduledHours</td>
        <td>@Model.UserCompletedHours</td>
        <td>@Model.UserAvailableScheduledHours</td>
        <td>@Model.UserAvailableFreeHours</td>
        <td>@Model.UserPhoneNumber</td>
    </tr>
</table>

<div style="display: block">
    <a href="/User/UpdateUser/@Model.UserID">Update this User</a>
</div>

<div style="display: block">

    @using (Html.BeginForm("DeleteUser", "User", "Post"))
    {
        <input type="hidden" asp-for="UserID" value="@Model.UserID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this user" />
    }
</div>